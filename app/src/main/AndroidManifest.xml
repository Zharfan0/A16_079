<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalProjectPAM"
        tools:targetApi="31">

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FinalProjectPAM">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.kategori.AddKategoriActivity"
            android:exported="false"
            android:theme="@style/Theme.FinalProjectPAM" />

        <activity
            android:name=".ui.pendapatan.AddPendapatanActivity"
            android:exported="false"
            android:theme="@style/Theme.FinalProjectPAM" />

        <activity
            android:name=".ui.pengeluaran.AddPengeluaranActivity"
            android:exported="false"
            android:theme="@style/Theme.FinalProjectPAM" />

        <activity
            android:name=".ui.aset.AddAsetActivity"
            android:exported="false"
            android:theme="@style/Theme.FinalProjectPAM" />

    </application>
</manifest>
